{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {},
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES2022",
        "module": "commonjs",
        "lib": ["ES2022"],
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    }
}
